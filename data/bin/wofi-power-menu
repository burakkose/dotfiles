#!/usr/bin/env bash

op=$( echo -e "â» Poweroff\nïƒœ Reboot\nï†† Suspend\nğŸ”‘ Lock\nï‚‹ Logout" | wofi -i --dmenu --sort-order=none --prompt="Action" | awk '{print tolower($2)}' )

case $op in
        poweroff)
                systemctl poweroff
                ;;
        reboot)
                systemctl reboot
                ;;
        suspend)
                systemctl suspend
                ;;
        lock)
                ~/.bin/sway-lock
                ;;
        logout)
                swaymsg exit
                ;;
esac