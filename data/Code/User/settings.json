{
    "files.watcherExclude": {
        // Version Control
        "**/.git": true,
        // Build Outputs
        "**/build/**": true,
        "**/dist/**": true,
        "**/out/**": true,
        "**/bin/**": true,
        "**/obj/**": true,
        "**/target/**": true,
        "**/.output/**": true,
        // Dependencies
        "**/node_modules/**": true,
        "**/third_party/**": true,
        // Caches
        "**/.cache/**": true,
        "**/__pycache__/**": true,
        "**/.pytest_cache/**": true,
        // IDE/Editor
        "**/.vscode/**": true,
        "**/.idea/**": true,
        "**/.vs/**": true,
        "**/*.code-workspace": true,
        // Temporary Files
        "**/*.log": true,
        "**/*.tmp": true,
        "**/*.temp": true,
        "**/*.swp": true,
        "**/*.swo": true,
        "**/*~": true,
        // OS Files
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/desktop.ini": true,
        // Python
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/*.egg-info/**": true,
        "**/.eggs/**": true,
        "**/venv/**": true,
        "**/.venv/**": true,
        "**/ENV/**": true,
        "**/env/**": true,
        // Misc
        "**/tmp/**": true,
        "**/temp/**": true,
        "**/.terraform/**": true,
        "**/public/assets/**": true,

        "**/*.o": true,
        "**/*.obj": true,
        "**/*.exe": true,
        "**/*.out": true,
        "**/*.a": true,
        "**/*.so": true,
        "**/*.dll": true,
        "**/*.dylib": true,
        "**/.ccls-cache": true,
        "**/compile_commands.json": false
    },
    "workbench.colorCustomizations": {
        "activityBar.foreground": "#aeaeae",
        "activityBar.inactiveForeground": "#646464",
        "button.foreground": "#ffffff",
        "dropdown.foreground": "#ffffff",
        "editorLineNumber.activeForeground": "#ffffff",
        "editorLineNumber.foreground": "#9c9c9c",
        "editorWidget.foreground": "#ffffff",
        "gitDecoration.ignoredResourceForeground": "#A6755B",
        "list.activeSelectionForeground": "#ffffff",
        "menu.foreground": "#ffffff",
        "sideBar.foreground": "#aeaeae",
        "statusBar.background": "#333333",
        "statusBar.foreground": "#ffffff",
        "tab.activeForeground": "#ffffff",
        "tab.inactiveForeground": "#aeaeae",
    },
    "editor.tokenColorCustomizations": {
        "comments": "#63a33e"
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/.git": true,
        "**/.vs": true,
        "**/.vscode": true,
        "**/out": true,
        "**/dist": true,
        "**/bin": true,
        "**/obj": true
    },
    "breadcrumbs.enabled": true,
    "C_Cpp.autocomplete": "default",
    "C_Cpp.autocompleteAddParentheses": true,
    "C_Cpp.clang_format_sortIncludes": true,
    "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": true,
    "C_Cpp.dimInactiveRegions": true,
    "C_Cpp.enhancedColorization": "enabled",
    "C_Cpp.errorSquiggles": "enabled",
    "C_Cpp.intelliSenseCachePath": "${workspaceFolder}/.vscode/ipch",
    "C_Cpp.intelliSenseCacheSize": 32768,
    "C_Cpp.intelliSenseMemoryLimit": 16384,
    "C_Cpp.loggingLevel": "Error",
    "C_Cpp.workspaceParsingPriority": "highest",
    "debug.inlineValues": "on",
    "debug.console.fontSize": 14,
    "debug.showBreakpointsInOverviewRuler": true,
    "debug.toolBarLocation": "docked",
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingQuotes": "always",
    "editor.autoIndent": "full",
    "editor.autoSurround": "languageDefined",
    "editor.bracketPairColorization.enabled": true,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorStyle": "block",
    "editor.foldingStrategy": "auto",
    "editor.fontFamily": "JetBrainsMono Nerd Font",
    "editor.fontLigatures": false, // no thanks :)
    "editor.fontSize": 12,
    "editor.formatOnPaste": true,
    "editor.guides.bracketPairs": true,
    "editor.guides.indentation": true,
    "editor.inlineSuggest.enabled": true,
    "editor.minimap.enabled": false,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "boundary",
    "editor.stickyScroll.enabled": true,
    "editor.rulers": [
        100
    ],
    "editor.smoothScrolling": true,
    "editor.tabCompletion": "on",
    "editor.tabSize": 4,
    "editor.wordWrap": "on",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "git.enableStatusBarSync": true,
    "git.openRepositoryInParentFolders": "always",
    "git.showInlineOpenFileAction": true,
    "local-history.path": "${workspaceFolder}/.vscode/history",
    "redhat.telemetry.enabled": false,
    "search.showLineNumbers": true,
    "security.workspace.trust.enabled": false,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "block",
    "terminal.integrated.enablePersistentSessions": true,
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.scrollback": 100000,
    "window.customTitleBarVisibility": "windowed",
    "window.menuBarVisibility": "compact",
    "window.zoomLevel": 1,
    "workbench.colorTheme": "Ayu Dark Bordered",
    "workbench.editor.enablePreview": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.sideBar.location": "left",
    "workbench.statusBar.visible": true,
}
