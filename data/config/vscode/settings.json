{
    "files.watcherExclude": {
        "**/.git/**": true,
        "**/build/**": true,
        "**/bin/**": true,
        "**/obj/**": true,
        "**/out/**": true,
        "**/dist/**": true,
        "**/third_party/**": true,
        "**/node_modules/**": true,
        "**/.vscode/**": true,
        "**/.cache/**": true,
        "**/*.log": true,
        "**/*.tmp": true
    },
    "workbench.colorCustomizations": {
        "activityBar.foreground": "#aeaeae",
        "activityBar.inactiveForeground": "#646464",
        "button.foreground": "#ffffff",
        "dropdown.foreground": "#ffffff",
        "editorLineNumber.activeForeground": "#ffffff",
        "editorLineNumber.foreground": "#9c9c9c",
        "editorWidget.foreground": "#ffffff",
        "gitDecoration.ignoredResourceForeground": "#A6755B",
        "list.activeSelectionForeground": "#ffffff",
        "menu.foreground": "#ffffff",
        "sideBar.foreground": "#aeaeae",
        "statusBar.background": "#333333",
        "statusBar.foreground": "#ffffff",
        "tab.activeForeground": "#ffffff",
        "tab.inactiveForeground": "#aeaeae",
    },
    "editor.tokenColorCustomizations": {
        "comments": "#63a33e"
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/.git": true,
        "**/.vs": true,
        "**/.vscode": true,
        "**/out": true,
        "**/dist": true,
        "**/bin": true,
        "**/obj": true
    },
    "breadcrumbs.enabled": true,
    "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": true,
    "C_Cpp.dimInactiveRegions": true,
    "C_Cpp.errorSquiggles": "enabled",
    "C_Cpp.intelliSenseCachePath": "${workspaceFolder}/.vscode/ipch",
    "C_Cpp.intelliSenseCacheSize": 32768,
    "C_Cpp.intelliSenseMemoryLimit": 16384,
    "C_Cpp.loggingLevel": "Error",
    "C_Cpp.workspaceParsingPriority": "highest",
    "debug.inlineValues": "on",
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingQuotes": "always",
    "editor.autoIndent": "full",
    "editor.autoSurround": "languageDefined",
    "editor.bracketPairColorization.enabled": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorStyle": "block",
    "editor.foldingStrategy": "auto",
    "editor.fontFamily": "Inconsolata",
    "editor.fontLigatures": false, // no thanks :)
    "editor.fontSize": 14,
    "editor.formatOnPaste": true,
    "editor.guides.bracketPairs": true,
    "editor.guides.indentation": true,
    "editor.inlineSuggest.enabled": true,
    "editor.minimap.enabled": true,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "boundary",
    "editor.smoothScrolling": true,
    "editor.tabCompletion": "on",
    "editor.tabSize": 4,
    "editor.wordWrap": "on",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "git.enableStatusBarSync": true,
    "git.openRepositoryInParentFolders": "always",
    "git.showInlineOpenFileAction": true,
    "local-history.path": "${workspaceFolder}/.vscode/history",
    "redhat.telemetry.enabled": false,
    "search.showLineNumbers": true,
    "terminal.integrated.fontFamily": "Inconsolata",
    "terminal.integrated.fontSize": 14,
    "window.zoomLevel": 3,
    "workbench.colorTheme": "Ayu Dark Bordered",
    "workbench.editor.enablePreview": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.sideBar.location": "left",
    "workbench.statusBar.visible": true,
}
